<%- include("../../views/partials/user/header.ejs") %>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.6;
        }

        .wallet-container {
            max-width: 1000px;
            margin: 30px auto;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .wallet-header {
            background-color: #4a90e2;
            color: white;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .wallet-header h1 {
            font-size: 1.5rem;
            margin: 0;
        }

        .balance-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #f9f9f9;
        }

        .balance-info h2 {
            color: #2ecc71;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .add-money-section {
            padding: 20px;
            background-color: #ffffff;
            border-bottom: 1px solid #e0e0e0;
        }

        .add-money-input {
            display: flex;
            gap: 10px;
        }

        .add-money-input input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
        }

        .add-money-btn {
            padding: 10px 20px;
            background-color: #2ecc71;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .add-money-btn:hover {
            background-color: #27ae60;
        }

        .transaction-history {
            padding: 20px;
        }

        .transaction-history h3 {
            margin-bottom: 15px;
            color: #4a90e2;
        }

        .credit {
            color: #2ecc71;
        }

        .debit {
            color: #e74c3c;
        }

        .transaction-badge {
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .badge-credit {
            background-color: #d4edda;
            color: #28a745;
        }

        .badge-debit {
            background-color: #f8d7da;
            color: #dc3545;
        }

        .error-message {
            color: #e74c3c;
            margin-top: 10px;
            text-align: center;
        }

        @media screen and (max-width: 800px) {
            .wallet-container {
                margin: 10px;
                width: calc(100% - 20px);
            }

            .balance-section {
                flex-direction: column;
                text-align: center;
            }

            .add-money-input {
                flex-direction: column;
            }

            .add-money-input input,
            .add-money-btn {
                width: 100%;
                margin-bottom: 10px;
            }

            .transaction-table {
                font-size: 0.9rem;
            }
        }

        .text-success {
            color: green;
        }
        .text-danger {
            color: red;
        }


    .badge.bg-success {
        background-color: green;
    }

    .badge.bg-danger {
        background-color: red;
    }

    .transaction-table-container {
        max-height: 300px; /* Adjust this height as needed */
        overflow-y: auto;
        border: 1px solid #ddd; /* Optional: Add border for better visibility */
    }

    .transaction-table {
        width: 100%;
        border-collapse: collapse;
    }

    .transaction-table th, .transaction-table td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .transaction-table th {
        background-color: #f2f2f2;
        position: sticky;
        top: 0; /* Keep header fixed on scroll */
        z-index: 1;
    }
   
</style>

</head>
<body>
    <div class="wallet-container">
        <div class="wallet-header">
            <h3>ðŸ’° My Wallet</h3>
            <span class="balance-icon">ðŸ’³</span>
        </div>

        <div class="balance-section">
            <div class="balance-info">
                <h3 id="current-balance" style="font-size: 2.5em;font-family: fantasy;">â‚¹ <%= wallet.balance.toFixed(2) %></h3>
                <p>Current Balance</p>
            </div>
            <div class="wallet-stats">
                <p>Total Credit: <b id="total-credit" class="credit">+&nbsp; â‚¹ 0</b></p>
                <p>Total Debit: <b id="total-debit" class="debit">-&nbsp; â‚¹ 0</b></p>
            </div>
        </div>

        <div class="transaction-history">
            <div class="text-center my-1">
                <button class="btn" style="background-color: white; font-size: 1.7em; color: #000000; margin-right: 33rem;">Transactions</button>
                <button class="btn btn-primary rounded-0 shadow" onclick="filterTransactions('credit')">Credits</button>
                <button class="btn btn-warning rounded-0 shadow" onclick="filterTransactions('debit')">Debits</button>
                <button class="btn btn-secondary rounded-0 shadow" onclick="filterTransactions('all')">Show All</button>
            </div>
            <div class="transaction-table-container">
                <table class="transaction-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>View</th>
                        </tr>
                    </thead>
                    <tbody id="transaction-list">
                        <% wallet.transactions.reverse().forEach(transaction => { %>
                            <tr data-type="<%= transaction.type %>">
                                <td><%= new Date(transaction.createdAt).toLocaleDateString() %></td>
                                <td><%= transaction.description %></td>
                                <td>
                                    <span class="badge <%= transaction.type === 'credit' ? 'bg-success' : 'bg-danger' %>" style="width: 55px;">
                                        <%= transaction.type === 'credit' ? 'Credit' : 'Debit' %>
                                    </span>
                                </td>
                                <td class="amount">â‚¹<%= transaction.amount.toFixed(2) %></td>
                                <% if (transaction.description.startsWith('Referral bonus')) { %>
                                    <td><a href="/profile" class="text-primary"><i class="fa-regular fa-eye"></i></a></td>
                                <% } else { %>
                                    <td><a href="/orderDetails?orderId=<%= transaction.orderId %>" class="text-primary"><i class="fa-regular fa-eye"></i></a></td>
                                <% } %>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
    <script>
        function filterTransactions(type) {
            const transactions = document.querySelectorAll('#transaction-list tr');
    
            transactions.forEach(transaction => {
                if (type === 'all' || transaction.getAttribute('data-type') === type) {
                    transaction.style.display = '';
                } else {
                    transaction.style.display = 'none';
                }
            });
        }
        document.addEventListener('DOMContentLoaded', function() {
            let totalCredit = 0;
            let totalDebit = 0;

            // Get all rows in the transaction table
            const rows = document.querySelectorAll('#transaction-list tr');

            rows.forEach(row => {
                // Get the transaction type from the data-type attribute
                const transactionType = row.getAttribute('data-type');
                // Get the amount from the amount column, stripping the currency symbol and commas
                const amountText = row.querySelector('.amount').textContent.replace('â‚¹', '').replace(/,/g, '');
                const amount = parseFloat(amountText);

                if (transactionType === 'credit') {
                    totalCredit += amount;
                } else if (transactionType === 'debit') {
                    totalDebit += amount;
                }
            });

            // Update the total credit and debit elements
            document.getElementById('total-credit').textContent = `+â‚¹${totalCredit.toFixed(2)}`;
            document.getElementById('total-debit').textContent = `-â‚¹${totalDebit.toFixed(2)}`;
        });


    </script>
    
